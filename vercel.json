{
  "version": 2,
  "builds": [
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "vite build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "api/blogs",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/blogs"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "rootDirectory": "public"
}
